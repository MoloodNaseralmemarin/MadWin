@using MadWin.Application.Services
@using MadWin.Core.DTOs.Orders
@model OrderViewModel
@{
    ViewData["Title"] = "پنل کاربری " + User.Identity?.Name;
}

<div class="container">
    <!-- Breadcrumb Start -->
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
        <li><a asp-area="UserPanel" asp-controller="Home" asp-action="Index">پنل کاربری</a></li>
        <li class="active">سفارش با اندازه دلخواه</li>
    </ul>
    <!-- Breadcrumb End -->

    <div class="row">
        <partial name="_SideBar" />

        <div class="col-sm-9" id="content">
            <h1 class="title">سفارش با اندازه دلخواه</h1>

            <form class="form-horizontal" asp-action="Index" method="post">
                <fieldset>
                    <legend>اطلاعات پرده با سایز دلخواه شما</legend>

                    <input type="hidden" id="PartCount" name="PartCount" />
                    <input type="hidden" id="IsEqualParts" name="IsEqualParts" />

                    <div class="form-group">
                        <label asp-for="CategoryId" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <select asp-for="CategoryId" asp-items="@(ViewData["Categories"] as SelectList)" class="form-control"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="SubCategoryId" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <select asp-for="SubCategoryId" asp-items="@(ViewData["SubCategory"] as SelectList)" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                          
                            <div>
                                <strong>مشتری گرامی،</strong> لطفاً جهت چپ و راست پرده را از نقطه‌ای که پرده نصب خواهد شد (محل چسباندن) تعیین کنید.
                                </div>
                                </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Height" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Height" class="form-control" inputmode="numeric" pattern="[0-9]*" autocomplete="off" />
                            <span class="text-danger">(cm) سانتی متر</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Width" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Width" id="totalWidth" class="form-control" inputmode="numeric" pattern="[0-9]*" autocomplete="off" />
                            <span class="text-danger">(cm) سانتی متر</span>
                        </div>
                    </div>

                    <!-- تغییرات اینجا -->
                    <div class="form-group">
                        <label class="col-sm-4 control-label">تقسیم‌بندی عرض پرده <span style="color:red;">*</span></label>
                        <div class="col-sm-6">
                            <small class="text-muted mb-3 d-block">لطفاً یک گزینه را انتخاب کنید</small>
                            <input type="hidden" name="DivisionType" id="DivisionType" />
                            <div class="radio custom-radio-group">
                                <label class="mb-4">
                                    <input type="radio" name="division" value="2-equal" onclick="updateInputs(2, 'equal')" />
                                    <strong>به دو قسمت مساوی</strong> تقسیم گردد.
                                </label>
                                <label class="mb-4">
                                    <input type="radio" name="division" value="2-unequal" onclick="updateInputs(2, 'unequal')" />
                                    <strong>به دو بخش نامساوی</strong> تقسیم گردد.
                                </label>
                                <label class="mb-4">
                                    <input type="radio" name="division" value="3-equal" onclick="updateInputs(3, 'equal')" />
                                    <strong>به سه بخش مساوی</strong> تقسیم گردد.
                                </label>
                                <label class="mb-4">
                                    <input type="radio" name="division" value="3-unequal" onclick="updateInputs(3, 'unequal')" />
                                    <strong>به سه بخش نامساوی</strong> تقسیم گردد.
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-6" id="width-inputs"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">اندازه‌های عرض</label>
                        <div class="col-sm-6" id="input-container"></div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Count" class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Count" class="form-control" inputmode="numeric" pattern="[0-9]*" autocomplete="off" />
                        </div>
                    </div>
                </fieldset>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="buttons">
                    <div>
                        <button id="submitOrder" class="btn btn-primary btn btn-block" type="submit">ثبت سفارش</button>
                        @if (ViewBag.resultTotalCost != null)
                        {
                            <span class="badge badge-success">@ViewBag.resultTotalCost</span>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* فاصله بیشتر بین رادیوها */
        .custom-radio-group label {
            display: block;
            padding: 10px 15px;
            margin-bottom: 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            cursor: pointer;
            transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
            user-select: none;
        }

        .custom-radio-group input[type="radio"] {
            display: none;
        }

        .custom-radio-group label strong {
            pointer-events: none;
        }

        .custom-alert {
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 1.5rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            color: #856404;
            margin-bottom: 20px;
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
        }

        .alert-icon {
            flex-shrink: 0;
            margin-right: 12px;
            width: 28px;
            height: 28px;
        }

        .alert-text strong {
            font-weight: 700;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(function () {
            const $category = $("#CategoryId");
            const $subCategory = $("#SubCategoryId");

            // دکمه را در ابتدا غیرفعال کن
            $("#submitOrder").prop("disabled", true);

            $category.change(function () {
                $subCategory.empty();
                loadSubCategories(this.value);
            });

            loadSubCategories($category.val());

            $("#Height, #Width, #Count").on("input", function () {
                this.value = this.value.replace(/\D/g, "");
            });

            Swal.fire({
                title: 'ماد وین',
                text: 'مشتری گرامی، پرده آهنربائی (سفارشی) با تور رولینگ و چسب درجه یک صادراتی تولید می گردد.',
                icon: 'success',
                confirmButtonText: 'تایید'
            });

            // تغییر رنگ لیبل‌های رادیو
            document.querySelectorAll('.custom-radio-group input[type="radio"]').forEach(radio => {
                radio.addEventListener('change', function () {
                    document.querySelectorAll('.custom-radio-group label').forEach(label => {
                        label.style.backgroundColor = '';
                        label.style.color = '';
                        label.style.borderColor = '#ccc';
                    });
                    if (this.checked) {
                        const label = this.parentElement;
                        label.style.backgroundColor = '#28a745';
                        label.style.color = 'white';
                        label.style.borderColor = '#28a745';
                    }
                });
            });
        });

        function loadSubCategories(categoryId) {
            if (!categoryId) return;
            $.getJSON(`/home/GetSubCategory/${categoryId}`, function (data) {
                data.forEach(item => {
                    $("#SubCategoryId").append(new Option(item.text, item.value));
                });
            });
        }

        function updateInputs(count, type) {
            const totalWidth = parseFloat(document.getElementById("totalWidth").value);
            if (isNaN(totalWidth) || totalWidth <= 0) return showError("لطفاً مقدار عرض کل را وارد کنید.");

            document.getElementById("DivisionType").value = `${count}-${type}`;
            document.getElementById("PartCount").value = count;
            document.getElementById("IsEqualParts").value = (type === "equal") ? "true" : "false";

            const container = document.getElementById("input-container");
            container.innerHTML = "";

            const label2 = ["راست", "چپ"];
            const label3 = ["راست", "وسط", "چپ"];

            const labels = (count === 2) ? label2 : label3;

            for (let i = 0; i < count; i++) {
                const div = document.createElement("div");
                div.className = "mb-2";

                const label = document.createElement("label");
                label.className = "mb-1";
                label.textContent = labels[i] || `بخش ${i + 1}`;

                const input = document.createElement("input");
                input.type = "number";
                input.name = `WidthParts[${i}]`;
                input.className = "form-control width-input";
                input.readOnly = (type === "equal");
                input.value = (type === "equal") ? (totalWidth / count).toFixed(0) : "";
                input.oninput = validateWidthInputs;

                div.appendChild(label);
                div.appendChild(input);
                container.appendChild(div);
            }

            document.getElementById("width-inputs").style.display = "block";
            hideError();
            validateWidthInputs(); // برای فعال کردن بررسی اولیه
        }

        function validateWidthInputs() {
            const totalWidth = parseFloat(document.getElementById("totalWidth").value) || 0;
            const inputs = document.querySelectorAll(".width-input");
            const submitButton = document.getElementById("submitOrder");

            const sum = Array.from(inputs).reduce((acc, input) => acc + (parseFloat(input.value) || 0), 0);
            const isEqualParts = document.getElementById("IsEqualParts").value === "true";

            if (sum !== totalWidth) {
                showError(`مجموع عرض‌ها باید برابر ${totalWidth} باشد.`);
                if (submitButton) submitButton.disabled = true;
                return;
            }

            if (!isEqualParts) {
                const values = Array.from(inputs).map(input => parseFloat(input.value) || 0);
                const allEqual = values.every(val => val === values[0]);
                if (allEqual) {
                    showError("در حالت نامساوی، اندازه‌ها نباید برابر باشند. لطفاً مقادیر را تغییر دهید یا حالت مساوی را انتخاب کنید.");
                    if (submitButton) submitButton.disabled = true;
                    return;
                }
            }

            hideError();
            if (submitButton) submitButton.disabled = false;
        }

        function showError(message) {
            let errorDiv = document.getElementById("error-container");
            if (!errorDiv) {
                errorDiv = document.createElement("div");
                errorDiv.id = "error-container";
                errorDiv.style.color = "red";
                errorDiv.style.marginTop = "10px";
                document.getElementById("width-inputs").appendChild(errorDiv);
            }
            errorDiv.textContent = message;
        }

        function hideError() {
            const errorDiv = document.getElementById("error-container");
            if (errorDiv) errorDiv.textContent = "";
        }

        // بررسی انتخاب تقسیم‌بندی هنگام ارسال فرم
        $("form").on("submit", function (e) {
            if (!$("input[name='division']:checked").length) {
                e.preventDefault();
                Swal.fire({
                    icon: "warning",
                    title: "توجه",
                    text: "لطفا یک گزینه برای تقسیم‌بندی عرض پرده انتخاب کنید.",
                    confirmButtonText: "باشه"
                });
            }
        });
    </script>
}
